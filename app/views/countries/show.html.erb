<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2><%= @country.name %></h2>
            <p><%= image_tag @country.flag %></p>
            <p><%= @country.area %></p>
            <p><%= @country.population %></p>
            <p><%= @country.language %></p>
            <p><%= @country.capital %></p>
<%= link_to 'Delete' , country_path(@country.id),  method: :delete, data: { confirm: "Are you sure you want to delete the country?" } %>
        </div>
        <div class="col-md-6">
            <h3>Big cities</h3>
            <% @country.cities.each do |city| %>
            <div class: "border_show">
                <p>Name:
                    <%= city.name%></p>
                  <%= link_to 'X' , country_city_path(@country.id, city.id),  method: :delete, data: { confirm: "Are you sure you want to delete the city?" } %>
                <p>Population:
                    <%= city.population %></p>
                <div><%= image_tag city.photo, class: "img-thumbnail img-responsive" %></div>
                <br>
            </div>
            <% end %>
        </div>
    </div>
</div>
